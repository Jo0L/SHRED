<html>
    <head>
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
        <%- include('include/_header') %>
        <link rel="stylesheet" href="/css/accessory.css">
    
    </head>
    <body>
        <div class="container">
            <div class="breadcrumb">
                <a href="/accessories/<%= accessory.type %>"><%= accessory.type %></a> > <a href="/accessories/filter?type=<%= accessory.type %>&gender=<%= accessory.gender %>"><%= accessory.gender %></a>
            </div>

            <hr>
            
            <div class="product">
                <img src="<%= accessory.img %>" alt="Cluse Watch">
                <div class="product-details">
                    <h1><%= accessory.company %></h1>
                    <p class="price">$<%= accessory.price %></p>
                    <p class="text-muted"><%= accessory.color %></p>
                    <div class="buttons">
                        <span class="wishlist">â˜†</span>
                        <button id="add-to-cart" class="add-to-cart" data-accessory-id="<%= accessory._id %>" data-price="<%= accessory.price %>" data-quantity="1" data-title="<%= accessory.company %> - <%= accessory.color %>" data-img="<%= accessory.img %>">Add to Cart</button>
                        <% if ( isAdmin) { %>
                            <div class="admin-actions">
                                <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#modal">Edit Item</button>
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal" data-id="<%= accessory.id %>">Delete Item</button>
                            </div>                        
                        <% } %>
                    </div>


                    <!-- Modal Structure -->
                    <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Edit Accessory</h5>
                                    <button type="button" class="close" data-dismiss="modal">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <form id="edit-form">
                                    <div class="modal-body">
                                        <div id="error-message" class="alert alert-danger" style="display: none;"></div>
                                        <div class="form-group">
                                            <input type="hidden" id="id-input" name="id" value="<%= accessory.id %>">
                                        </div>
                                        <div class="form-group">
                                            <input type="hidden" id="type-input" name="type" value="<%= accessory.type %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="color">color</label>
                                            <input type="text" class="form-control" id="color-input" name="color" value="<%= accessory.color %>" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="company">brand</label>
                                            <input type="text" class="form-control" id="company-input" name="company" value="<%= accessory.company %>" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="gender">Gender</label>
                                            <select class="form-control" id="gender-select" name="gender">
                                                <option value="Female" <%= accessory.gender === 'Female' ? 'selected' : '' %>>Female</option>
                                                <option value="Male" <%= accessory.gender === 'Male' ? 'selected' : '' %>>Male</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="price">Price</label>
                                            <input type="number" class="form-control" id="price-input" name="price" step="0.01" min="0" value="<%= accessory.price %>" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="stock">Stock</label>
                                            <input type="number" class="form-control" id="stock-input" name="stock" step="0" min="0" value="<%= accessory.stock %>" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="image">Image</label>
                                            <input type="text" class="form-control" id="img-input" name="img" value="<%= accessory.img %>" required>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn btn-danger" id="edit-button">Save</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Delete Confirmation Modal -->
                    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Delete Accessory</h5>
                                    <button type="button" class="close" data-dismiss="modal">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p>Are you sure you want to delete this item? This action cannot be undone.</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                    <button type="button" class="btn btn-danger" id="confirm-delete-button">Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        <script src="/js/accessory.js"></script>
        <%- include('include/_footer') %>

    </body>
</html>

