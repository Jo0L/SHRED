<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <%- include('../include/_header') %>
    <link rel="stylesheet" href="/css/tables.css"> 
    <link rel="stylesheet" href="/css/manager.css"> 
</head>
<body>
    
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h1>All Products</h1>
                <button type="button" class="btn btn-success mb-3" data-toggle="modal" data-target="#modal">Create New Item</button>

                <hr>

                <div class="filter-bar">
                
                    <input type="text" id="search" class="search-bar" placeholder="Search by Brand or Type" />
                
                    <div class="filter-section">
                        <select id="type" class="filter-dropdown">
                            <option value="">Type</option>
                            <option value="watches">Watches</option>
                            <option value="jewelry">Jewelry</option>
                            <option value="sunglasses">Sunglasses</option>
                        </select>
                        
                        <select id="price" class="filter-dropdown">
                            <option value="">Price Range</option>
                            <option value="0-100">0-100</option>
                            <option value="100-1000">100-1000</option>
                            <option value="1000-2000">1000-2000</option>
                            <option value="3000-4000">3000-4000</option>
                            <option value="+4000">+4000</option>
                        </select>

                        <select id="gender" class="filter-dropdown">
                            <option value="">Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>

                        <select id="stock" class="filter-dropdown">
                            <option value="">In stock</option>
                            <option value="true">Yes</option>
                            <option value="false">No</option>
                        </select>
                    
                    </div>
                
                    <button id="applyFiltersBtn">Apply Filters</button>
                    <button id="resetFiltersBtn" class="reset-btn">Reset Filters</button>
                </div>
                
                <div class="table-container">
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>ID</th>
                                <th>Type</th>
                                <th>Color</th>
                                <th>Brand</th>
                                <th>Gender</th>
                                <th>Price</th>
                                <th>Stock</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% accessories.forEach(accessory => { %>
                                <tr>
                                    <td><%= accessory._id %></td>
                                    <td><%= accessory.type %></td>
                                    <td><%= accessory.color %></td>
                                    <td><%= accessory.company %></td>
                                    <td><%= accessory.gender %></td>
                                    <td>$<%= accessory.price.toFixed(2) %></td>
                                    <td><%= accessory.stock %></td>
                                    <td>
                                        <a href="/accessories/<%= accessory.type %>/?id=<%= accessory._id%>" class="btn btn-primary btn-sm">edit</a>
                                        <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteModal" data-id="<%= accessory._id %>">Delete</button>
                                    </td>
                                </tr>
                                
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Modal new item Structure -->
            <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Add new Accessory</h5>
                            <button type="button" class="close" data-dismiss="modal">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <form id="new_item_form">
                            <div class="modal-body">
                                <div id="error-message" class="alert alert-danger" style="display: none;"></div>
                                <div class="form-group">
                                    <label for="type">Type</label>
                                    <select class="form-control" id="type-select" name="type">
                                        <option value="watches"> watches</option>
                                        <option value="sunglasses"> sunglasses</option>
                                        <option value="jewelry"> jewelry</option>
                                    </select>                               
                               </div>
                                <div class="form-group">
                                    <label for="color">color</label>
                                    <input type="text" class="form-control" id="color-input" name="color" required>
                                </div>
                                <div class="form-group">
                                    <label for="company">brand</label>
                                    <input type="text" class="form-control" id="company-input" name="company" required>
                                </div>
                                <div class="form-group">
                                    <label for="gender">Gender</label>
                                    <select class="form-control" id="gender-select" name="gender">
                                        <option value="Female"> Female</option>
                                        <option value="Male"> Male</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="price">Price</label>
                                    <input type="number" class="form-control" id="price-input" name="price" step="1" min="0" required>
                                </div>
                                <div class="form-group">
                                    <label for="stock">Stock</label>
                                    <input type="number" class="form-control" id="stock-input" name="stock" step="1" min="0" required>
                                </div>
                                <div class="form-group">
                                    <label for="image">Image</label>
                                    <input type="text" class="form-control" id="img-input" name="img" required>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="button" class="btn" id="add-button">Save</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Delete Confirmation Modal -->
        <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Delete Product</h5>
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete this product? This action cannot be undone.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-danger" id="confirm-delete-button">Delete</button>
                    </div>
                </div>
            </div> 
        </div> 
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="/js/products.js"></script>
    <%- include('../include/_footer') %>
</body>
</html>
