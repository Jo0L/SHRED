<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <%- include('../include/_header') %>
    <link rel="stylesheet" href="/css/tables.css">
    <link rel="stylesheet" href="/css/manager.css"> 
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h1>All Users </h1>
    
                <hr>

                <div class="filter-bar">
                    <input type="text" id="search" class="search-bar" placeholder="Search user" />
                
                    <div class="filter-section">
                        <select id="isAdmin" class="filter-dropdown">
                            <option value="">isAdmin</option>
                            <option value="true">Yes</option>
                            <option value="false">No</option>
                        </select>
                    
                        <select id="gender" class="filter-dropdown">
                            <option value="">Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Rather not say">Rather not say</option>
                        </select>
                    </div>
                
                    <button id="applyFiltersBtn">Apply Filters</button>
                    <button id="resetFiltersBtn" class="reset-btn">Reset Filters</button>
                </div>

                <div class="table-container">
                    <table class="table table-striped table-hover" id="usersTable">
                        <thead class="thead-dark">
                            <tr>
                                <th>Email</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Gender</th>
                                <th>Address</th>
                                <th>Is Admin</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(user => { %>
                                <tr class="user-row">
                                    <td><%= user._id %></td>
                                    <td><%= user.firstName %></td>
                                    <td><%= user.lastName %></td>
                                    <td><%= user.gender %></td>
                                    <td><%= user.address %></td>
                                    <td><%= user.isAdmin ? 'Yes' : 'No' %></td>                                            
                                    <td>
                                        <% if (user._id !== username) { %>
                                            <button class="btn <%= user.isAdmin ? 'btn btn-info btn-sm' : 'btn-warning btn-sm' %> change-admin-btn" data-id="<%= user._id %>" data-admin="<%= user.isAdmin %>">
                                                <%= user.isAdmin ? 'Revoke Admin' : 'Make Admin' %>
                                            </button>
                                            <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteModal" data-id="<%= user._id %>">Delete User</button>
                                        <% } else { %>
                                            <h5><span class="badge badge-secondary">Cannot modify own status</span></h5>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Delete Confirmation Modal -->
        <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Delete User</h5>
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete this item? This action cannot be undone.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-danger" id="confirm-delete-button">Delete</button>
                    </div>
                </div>
            </div> 
        </div> 
    </div>
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="/js/users.js"></script>
    <%- include('../include/_footer') %>
</body>
</html>
