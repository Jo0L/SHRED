<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <%- include('include/_header') %>
    <link rel="stylesheet" href="/css/products.css"> 
</head>
<body>
    
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h1>All Products</h1>
                <button type="button" class="btn btn-success mb-3" data-toggle="modal" data-target="#modal">Create New Item</button>

                <hr>
                
                <div class="table-container">
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>ID</th>
                                <th>Type</th>
                                <th>Color</th>
                                <th>Company</th>
                                <th>Gender</th>
                                <th>Price</th>
                                <th>Stock</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% accessories.forEach(accessory => { %>
                                <tr>
                                    <td><%= accessory._id %></td>
                                    <td><%= accessory.type %></td>
                                    <td><%= accessory.color %></td>
                                    <td><%= accessory.company %></td>
                                    <td><%= accessory.gender %></td>
                                    <td>$<%= accessory.price.toFixed(2) %></td>
                                    <td><%= accessory.stock %></td>
                                    <td>
                                        <a href="/accessories/<%= accessory.type %>/?id=<%= accessory._id%>" class="btn btn-primary">edit</a>
                                        <button class="btn btn-danger delete-btn" data-id="<%= accessory.id %>">Delete</button>                                        
                                    </td>
                                </tr>
                                
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- Modal new item Structure -->
            <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Add new Accessory</h5>
                            <button type="button" class="close" data-dismiss="modal">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <form id="new_item_form">
                            <div class="modal-body">
                                <div id="error-message" class="alert alert-danger" style="display: none;"></div>
                                <div class="form-group">
                                    <label for="type">Type</label>
                                    <select class="form-control" id="type-select" name="type">
                                        <option value="watches"> watches</option>
                                        <option value="sunglasses"> sunglasses</option>
                                        <option value="jewelry"> jewelry</option>
                                    </select>                               
                               </div>
                                <div class="form-group">
                                    <label for="name">color</label>
                                    <input type="text" class="form-control" id="color-input" name="color">
                                </div>
                                <div class="form-group">
                                    <label for="company">company</label>
                                    <input type="text" class="form-control" id="company-input" name="company">
                                </div>
                                <div class="form-group">
                                    <label for="gender">Gender</label>
                                    <select class="form-control" id="gender-select" name="gender">
                                        <option value="Female"> Female</option>
                                        <option value="Male"> Male</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="price">Price</label>
                                    <input type="number" class="form-control" id="price-input" name="price" step="0.01" min="0">
                                </div>
                                <div class="form-group">
                                    <label for="stock">Stock</label>
                                    <input type="number" class="form-control" id="stock-input" name="stock" step="0" min="0">
                                </div>
                                <!-- TODO 
                                after decide how the images is saved, need to change in the form.
                                right now it will be a simple string.
                                <input type="file" class="form-control-file" id="image-input" name="image" accept="image/*">
                                -->
                                <div class="form-group">
                                    <label for="image">Image</label>
                                    <input type="text" class="form-control" id="img-input" name="img">
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="button" class="btn" id="add-button">Save</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="/js/products.js"></script>
    <%- include('include/_footer') %>
</body>
</html>
