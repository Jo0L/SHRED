<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SHRED</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="background"></div> <!-- Background image container -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="login-form">
                <h2 class="text-center font-weight-bold welcome-heading">Welcome to SHRED!</h2>
                <h5 class="signin-message">Reset Your Password<br></h5> <!-- Added signin-message class -->
                
                <form method="post">
                    <div class="form-group">
                        <label for="newPassword">New Password</label>
                        <input type="password" name="newPassword" class="form-control" id="newPassword" 
                        required
                        placeholder="******">
                    </div>
                    
                    <!-- message -->
                    <% if (typeof message !== 'undefined' && message) { %>
                        <div class="alert alert-info text-center">
                            <%= message %>
                        </div>
                    <% } %>

                    <!-- error message -->
                    <% if (typeof error !== 'undefined' && error) { %>
                        <div class="alert alert-danger text-center">
                            <%= error %>
                        </div>
                    <% } %>

                    <!-- success message -->
                    <% if (typeof success !== 'undefined' && success) { %>
                        <div class="alert alert-success text-center">
                            <%= success %>
                        </div>
                    <% } %>
                
                    <button type="submit" class="btn btn-dark btn-block">Reset Password</button>
                </form>


                <div class="mt-3 text-center">
                    Sign in to different account? <a href="/login">Login</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
